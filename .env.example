# IRCCA Sistema PWA - Variables de Entorno
# Copiar a .env.local para desarrollo

# Configuración de la aplicación
VITE_APP_NAME="Sistema de Control de Accesos del IRCCA - Registro de Acceso"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Sistema de Control de Accesos del IRCCA"

# Configuración PWA
VITE_PWA_NAME="Sistema de Control de Accesos del IRCCA"
VITE_PWA_SHORT_NAME="IRCCA Sistema"
VITE_PWA_THEME_COLOR="#2E7D32"
VITE_PWA_BACKGROUND_COLOR="#FFFFFF"

# Base de datos
VITE_DB_NAME="IRCCA_Sistema_DB"
VITE_DB_VERSION=1

# Configuración de seguridad
# ✅ NOTA: Las siguientes variables ahora están hardcodeadas en el código por seguridad
# - ENCRYPTION_KEY_LENGTH, PBKDF2_ITERATIONS, SALT_LENGTH (en encryptionService.ts)
# - APP_MASTER_KEY (generada dinámicamente en databaseService.ts)

# ✅ NUEVO: Credenciales de administrador por defecto (CAMBIAR EN PRODUCCIÓN)
VITE_ADMIN_DEFAULT_CEDULA="12345678"
VITE_ADMIN_DEFAULT_GRADO="teniente"
VITE_ADMIN_DEFAULT_NOMBRE="Admin"
VITE_ADMIN_DEFAULT_APELLIDO="Sistema"
VITE_ADMIN_DEFAULT_PASSWORD="admin123"

# Configuración de desarrollo
VITE_DEV_MODE=true
VITE_DEBUG_LOGS=true
VITE_MOCK_AUTH=true

# Configuración de producción (solo para referencia)
# VITE_DEV_MODE=false
# VITE_DEBUG_LOGS=false
# VITE_MOCK_AUTH=false

# Configuración del servidor
VITE_SERVER_HOST="localhost"
VITE_SERVER_PORT=5173

# Configuración de kiosco
VITE_KIOSK_MODE=true
VITE_KIOSK_TIMEOUT=300000
VITE_AUTO_LOGOUT_TIME=1800000

# Configuración de backup
VITE_AUTO_BACKUP=true
VITE_BACKUP_INTERVAL=1800000
VITE_MAX_BACKUPS=10
VITE_RETENTION_DAYS=365

# URLs y endpoints (para futuras integraciones)
# VITE_API_BASE_URL=""
# VITE_SYNC_ENDPOINT=""
# VITE_BACKUP_ENDPOINT=""